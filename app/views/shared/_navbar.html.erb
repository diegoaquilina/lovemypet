<div class="navbar navbar-expand-md navbar-light navbar-lewagon"  data-controller="navbar"
  data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid">
    <div class="d-flex">
      <div class="navbar-logo">
        <%= link_to "/", class: "navbar-brand" do %>
          <%= image_tag "logo.png" %>
        <% end %>

      </div>
      <div class="d-flex align-items-center btn-nav">
        <div>
          <%= link_to "Meus Pets", pets_path, class:"dropdown-item" %>
        </div>
        <div class="dropdown-nav">
          <button class="dropbtn">Cadastrar na agenda
              <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
              <%#= link_to "🐕 Cadastrar Pet", new_pet_path, class: "dropdown-item" %>
              <%= link_to "🍗 Alimentação", new_food_path, class: "dropdown-item" %>
              <%= link_to "🛁 Banho & Tosa", new_bath_path, class: "dropdown-item" %>
              <%= link_to "🩺 Nova Consulta", new_appointment_path, class: "dropdown-item" %>
              <%= link_to "💊 Medicamento", new_medication_path, class: "dropdown-item" %>
              <%= link_to "💉 Vacina", new_vaccine_path, class: "dropdown-item" %>
            </div>
        </div>
      </div>
    </div>

    <h1>Love My Pet</h1>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
          </li>
          <li class="nav-item dropdown">
          <% if current_user.avatar.attached?%>
            <%= cl_image_tag current_user.avatar.key, width: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "jone doe.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Meu Perfil", profile_path, class: "dropdown-item" %>
              <%= link_to "Sair", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
