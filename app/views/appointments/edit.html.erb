<div class="container bg-light rounded-5 p-2">
  <div class="bg-light rounded-5 px-4 py-2">
    <%= simple_form_for @appointment do |f| %>
    <div class="row">
     <div class="col-md-12">
      <%= f.input :title, label: "Motivo da consulta" %>
     </div>
    </div>
    <div class="row">
     <div class="col-md-8">
      <%= f.input :address, label: "EndereÃ§o" %>
