<div class= "container">
  <h1>Agende sua próxima consulta</h1>
    <%= simple_form_for @appointment, as: :appointment, url: appointment_path(@appointment), method: :post do |f| %>
      <%= f.input :date, label: "Data da consulta" %>
      <%= f.input :address, label: "Endereço" %>
      <%= f.input :phone, label: "Telefone" %>
      <%= f.input :title, label: "Motivo da consulta" %>
      <%= f.submit "Adicionar consulta", class:"btn btn-primary" %>
  <% end %>
</div>

<div class="container">
<%= link_to "Meu Portal", "#" , class: "btn btn-primary" %>
</div>
