<div class="container">
  <h1>Consultas agendadas</h1>

  <% if @appointments.empty? %>
    "Seu pet não possui nenhuma consulta agendada."
  <% else %>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Pet</th>
                <th>Data da consulta</th>
                <th>Motivo da consulta</th>
                <th>Endereço</th>
                <th>Telefone</th>
                <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
                <% @appointments.each do |appointment| %>
                  <tr>
                    <td><%= appointment.pet.name %></td>
                    <td><%= appointment.date.strftime("%d/%m/%Y") %></td>
                    <td><%= appointment.title %></td>
                    <td><%= appointment.address %></td>
                    <td><%= appointment.phone %></td>
                    <td><%= link_to 'Editar', edit_appointment_path(appointment) %></td>
                    <td><%= link_to 'Deletar', appointment_path(appointment), data: {turbo_method: :delete, turbo_confirm: "Você tem certeza?"} %></td>
                  </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  <% end %>
</div>
