<div class="container mt-5">
  <div class="d-flex justify-content-center align-items-center">
    <h1>Detalhes das consultas</h1>
  </div>
  <div class="container-food mt-5">
    <% if @appointments.empty? %>
      "Seus pets não possuem nenhuma consulta agendada."
    <% else %>
      <div class="table-responsive">
          <table class="table table-striped">
              <thead>
              <tr>
                  <th style="text-align:center">Pet</th>
                  <th style="text-align:center">Data da consulta</th>
                  <th style="text-align:center">Motivo da consulta</th>
                  <th style="text-align:center">Endereço</th>
                  <th style="text-align:center">Telefone</th>
                  <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
                  <% @appointments.each do |appointment| %>
                    <tr>
                      <td style="text-align:center"><%= appointment.pet.name %></td>
                      <td style="text-align:center"><%= appointment.date.strftime("%d/%m/%Y") %></td>
                      <td style="text-align:center"><%= appointment.title %></td>
                      <td style="text-align:center"><%= appointment.address %></td>
                      <td style="text-align:center"><%= appointment.phone %></td>
                      <td><%= link_to edit_appointment_path(appointment) do %>
                          <i class="fa-solid fa-pen-to-square"></i>
                        <% end %>
                      </td>
                      <td><%= link_to appointment_path(appointment), data: {turbo_method: :delete, turbo_confirm: "Você tem certeza?"} do %>
                          <i class="fa-solid fa-trash-can"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    <% end %>
  </div>
</div>
