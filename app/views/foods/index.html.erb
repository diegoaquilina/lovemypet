

<div class="container">
  <h1>Alimentaçao do(s) seu(s) pet(s)</h1>

  <% if @foods.empty? %>
    "Voce nao possui nenhuma ração registrada."
  <% else %>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Pet</th>
                <th>Tipo de raçao</th>
                <th>Marca</th>
                <th>Qtd do pacote (kg)</th>
                <th>Qtd diária (g)</th>
                <th>Data de inicio</th>
                <th>Data da próxima compra</th>
                <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
                <% @foods.each do |food| %>
                  <% calc = end_date_food(food.start_date, food.bag_qty_kg, food.daily_qty_kg) %>
                  <tr>
                    <td><%= food.pet.name %></td>
                    <td><%= food.category %></td>
                    <td><%= food.brand %></td>
                    <td style="text-align:center"><%= food.bag_qty_kg %></td>
                    <td style="text-align:center"><%= food.daily_qty_kg %></td>
                    <td style="text-align:center"><%= food.start_date.strftime("%d/%m/%Y") %></td>
                    <td style="text-align:center"><%= calc.strftime("%d/%m/%Y") %></td>
                    <td><%= link_to 'Editar', edit_food_path(food) %></td>
                    <td><%= link_to 'Deletar', food_path(food), data: {turbo_method: :delete, turbo_confirm: "Você tem certeza?"} %></td>
                  </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  <% end %>
</div>
