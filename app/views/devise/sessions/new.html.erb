<div class="d-flex justify-content-center align-items-center">
  <h2>Faça seu login 🐾</h2>
</div>

<div class="container bg-light rounded-5 p-2 col-4">
  <div class="bg-light rounded-5 px-4 py-2">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: "Email", placeholder: "Digite seu email" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: "Senha", placeholder: "Digite sua senha" %>
        <%= f.input :remember_me, label: "Lembrar próximos acessos", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions container col-4">
        <%= f.button :submit, "Entrar", class:"btn btn-gradient" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
