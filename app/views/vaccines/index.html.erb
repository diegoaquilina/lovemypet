<div class="container">
    <h1>Vacina(s) do(s) seu(s) pet(s)</h1>

    <% if @vaccines.empty? %>
        "Seu pet nao possui nenhum medicamento."
    <% else %>
      <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Pet</th>
                <th>Vacina</th>
                <th>Data de aplicaçao</th>
                <th>Data de vencimento</th>
                <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
                <% @vaccines.each do |vaccine| %>
                    <tr>
                    <td><%= vaccine.pet.name %></td>
                    <td><%= vaccine.vaccine_type %></td>
                    <td><%= vaccine.app_date.strftime("%d/%m/%Y") %></td>
                    <td><%= vaccine.expiry_date.strftime("%d/%m/%Y") %></td>
                    <td><%= link_to 'Editar', edit_vaccine_path(vaccine) %></td>
                    <td><%= link_to 'Deletar', vaccine_path(vaccine), data: {turbo_method: :delete, turbo_confirm: "Você tem certeza?"} %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
      </div>
    <% end %>
</div>
