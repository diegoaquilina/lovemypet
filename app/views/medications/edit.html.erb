        <%= f.input :name, label: "Nome" %>
        <%= f.input :dose, label: "Dosagem" %>
        <%= f.input :dose_unit, label: "Unidade da dosagem" %>
        <%= f.input :instructions, label: "InstruÃ§oes de uso" %>
        <%= f.input :frequency, label: "Frequencia" %>
