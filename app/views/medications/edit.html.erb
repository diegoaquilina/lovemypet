<div class="container">
    <h1>Editar medicamento</h1>
        <%= simple_form_for @medication do |f| %>
        <%= f.input :name, label: "Nome" %>
        <%= f.input :dose, label: "Dosagem" %>
        <%= f.input :dose_unit, label: "Unidade da dosagem" %>
        <%= f.input :instructions, label: "InstruÃ§oes de uso" %>
        <%= f.input :frequency, label: "Frequencia" %>
        <%= f.input :days_qty, label: "Periodo a ser tomado" %>
        <%= f.input :pet, as: :hidden, input_html: {value: @medication.pet.id} %>
        <%= f.submit "Editar", class:"btn btn-primary" %>
    <% end %>
</div>
