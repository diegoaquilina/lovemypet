<div class="container">
    <h1>Medicamento(s) do(s) seu(s) pet(s)</h1>

    <% if @medications.nil? %>
        "Seu pet nao possui nenhum medicamento."
    <% else %>
      <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Pet</th>
                <th>Medicamento</th>
                <th>Dose</th>
                <th>Unidade da dose</th>
                <th>Instru√ßoes</th>
                <th>Frequencia</th>
                <th>Periodo a serem tomado</th>
                <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
                <%# @medications.each do |medication| %>
                    <tr>
                    <td><%#= pet.name %></td>
                    <td><%#= medication.name %></td>
                    <td><%#= medication.dose %></td>
                    <td><%#= medication.dose_unit %></td>
                    <td><%#= medication.instructions %></td>
                    <td><%#= medication.frequency %></td>
                    <td><%#= medication.days_qty %></td>
                    <td><%#= link_to 'Editar', edit_medication_path(medication) %></td>       
                    </tr>
                <%# end %>
            </tbody>
        </table>
      </div>
    <% end %>
</div>






