<div class="container mt-5">
  <div class="container-food mt-5">
    <% if @medications.empty? %>
      "Seus pets não possuem nenhuma ração cadastrada."
    <% else %>
      <% @medications.each do |medication| %>
        <p>
        Próximo remédio de <%= medication.pet.name %> 
        será dia <%#= %> as <%#= %> 
        <%= link_to edit_medication_path(medication) do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
        <%= link_to medication_path(medication), data: {turbo_method: :delete, turbo_confirm: "Você tem certeza?"} do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
        </p>        
      <% end %>
    <% end %>
  </div>
</div>