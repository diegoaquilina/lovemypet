  </div>
  <div class="conteinerIndexPets">
    <div class="box">
        <% @pets.each do |pet| %>
          <%= link_to pet_path(pet), class:"text-decoration-none" do %>
            <div class="imgBx">
              <% if pet.photo.attached? %>
                <%= cl_image_tag pet.photo.key, class:""%>
              <% else %>
                <img src="https://images.pexels.com/photos/39317/chihuahua-dog-puppy-cute-39317.jpeg?auto=compress&cs=tinysrgb&w=600" style="border-radius: 5%; margin-top: 1rem;" class="pet-img card-img-top" alt="...">
              <% end %>
            </div>
          <% end %>
        <% end %>
      <div class="content">
        <% @pets.each do |pet| %>
          <h2><%= pet.name %><br><span><%= pet.breed %></span></h2>
        <% end %>
      </div>
    </div>
  </div>
</div>

