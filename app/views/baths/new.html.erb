<div class="container">
    <h1>Agendamento</h1>
        <%= simple_form_for @bath, as: :bath, url: baths_path(@bath), method: :post do |f| %>
        <%= f.input :pet, collection: @pet.map { |pet| [pet.name.capitalize, pet.id]}, include_blank: false %>
        <%= f.input :category, label: "ServiÃ§o", collection: Bath::SERVICE.map { |e| e.capitalize}, include_blank: false %>
        <%= f.input :address, label: "Petshop" %>
        <%= f.input :date, order:[:day, :month, :year],start_year: Date.today.year,
        end_year: Date.today.year + 1, label: "Data" %>
        <p><%= f.check_box :notification %> Me lembre deste compromisso </p>
        <%= f.submit "Agendar", class:"btn btn-primary" %>
