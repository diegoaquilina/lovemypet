
<div class="container">
    <h1>Cuidados agendados do(s) seu(s) pet(s)</h1>

    <% if @baths.empty? %>
        "Voce nao possui nenhum agendamento."
    <% else %>
      <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Pet</th>
                <th>Serviço</th>
                <th>Petshop</th>
                <th style="text-align:center">Data</th>
                <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
                <% @baths.each do |bath| %>
                    <tr>
                    <td><%= bath.pet.name %></td>
                    <td><%= bath.category %></td>
                    <td><%= bath.address %></td>
                    <td style="text-align:center"><%= bath.date.strftime("%d/%m/%Y") %></td>
                    <td><%= link_to 'Editar', edit_bath_path(bath) %></td>
                    <td><%= link_to 'Deletar', bath_path(bath), data: {turbo_method: :delete, turbo_confirm: "Você tem certeza?"} %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
      </div>
    <% end %>
</div>
