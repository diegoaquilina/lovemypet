<div class="container">
    <h1>Editar Agendamento</h1>
        <%= simple_form_for @bath do |f| %>
        <%= f.input :category, label: "Serviço", collection: Bath::SERVICE.map { |e| e.capitalize}, include_blank: false %>
        <%= f.input :address, label: "Endereço" %>
        <%= f.input :date, label: "Data" %>
        <%= f.input :pet, as: :hidden, input_html: {value: @bath.pet.id} %>
        <%= f.submit "Agendar", class:"btn btn-primary" %>
    <% end %>
</div>
